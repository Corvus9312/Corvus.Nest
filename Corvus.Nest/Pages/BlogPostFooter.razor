@inherits BlogPostFooterBase

<div class="post-footer row py-3">
    <div class="d-flex col-lg justify-content-start">
        @if (PreviousPost is not null)
        {
            <a href="@PreviousPost.Url">
                <div style="display: inline-block">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                        <path d="M10 12.796V3.204L4.519 8 10 12.796zm-.659.753-5.48-4.796a1 1 0 0 1 0-1.506l5.48-4.796A1 1 0 0 1 11 3.204v9.592a1 1 0 0 1-1.659.753z" />
                    </svg>
                </div>
                <div style="display: inline-block">
                    <p>上一篇</p>
                    @PreviousPost.Title
                </div>
            </a>
        }
    </div>
    <div class="center-line"></div>
    <div class="d-flex col-lg justify-content-end">
        @if (NextPost is not null)
        {
            <a href="@NextPost.Url">
                <div style="display: inline-block">
                    <p>下一篇</p>
                    @NextPost.Title
                </div>
                <div style="display: inline-block">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                        <path d="M6 12.796V3.204L11.481 8 6 12.796zm.659.753 5.48-4.796a1 1 0 0 0 0-1.506L6.66 2.451C6.011 1.885 5 2.345 5 3.204v9.592a1 1 0 0 0 1.659.753z" />
                    </svg>
                </div>
            </a>
        }
    </div>
</div>